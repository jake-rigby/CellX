<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false" rollOver="{bg.color=0x345fa5}" rollOut="bg.color= isSelected ? 0x7088b0 : 0x575d67">
		
	<fx:Script>
		<![CDATA[
			import flash.events.Event;
			
			private var _isSelected:Boolean = false;
			[Bindable] public var vo:CaptureVO;
			[Bindable] public var res:String;
			
			[Bindable(event = "isSelectedChanged")] public function get isSelected():Boolean
			{
				return _isSelected;
			}
			
			public function set isSelected(value:Boolean):void
			{
				_isSelected = value;
				dispatchEvent(new Event("isSelectedChanged"));
			}
			
			override public function set data(value:Object):void
			{
				vo = value as CaptureVO;
				if (vo) res = vo.nativeResolution.x+' x '+vo.nativeResolution.y; 
				super.data = value;
			}
			
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
			{
				scale();
				super.updateDisplayList(unscaledWidth, unscaledHeight);
			}
			
			private function scale():void
			{
				var f:Number = 150/vo.bmd.height;
				bi.height = 150;
				bi.width = vo.bmd.width * f;
				lbl.width = bi.width * 0.8;
			}
			
			private function dlt():void
			{
				dispatchEvent(new Event("delete"));
			}

		]]>
	</fx:Script>
	
	<s:BitmapImage id="bi" source="{vo.bmd}" horizontalCenter="0" />
		
	<s:Group bottom="20">		
		<s:Rect width="100%" height="100%" >
			<s:fill>
				<s:SolidColor color="0" alpha="0.8" />
			</s:fill>
		</s:Rect>
		<s:Label id="lbl" fontSize="16" text="{vo.name}&#13;frame time {vo.timecode}ms" color="white" top="3" left="3" right="3" bottom="3" />
	</s:Group>
	
	<s:Rect width="100%" height="100%" visible="{!isSelected}">
		<s:stroke>
			<s:SolidColorStroke id="bg" color="0x575d67" weight="2" />
		</s:stroke>
	</s:Rect>
	
	<s:Rect width="100%" height="100%" visible="{isSelected}">
		<s:stroke>
			<s:SolidColorStroke color="0x7088b0" weight="2" />
		</s:stroke>
	</s:Rect>
	
	<s:Label id="delete" text="X" click="{dlt()}" color="0xffffff" top="10" right="10" />
	
</s:ItemRenderer>
